        {
          "name": "POST Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) { pm.collectionVariables.set('token', json.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"shaizqurashi12345@gmail.com\",\n  \"password\": \"aligarh123boss\"\n}"
            },
            "url": "{{base_url}}/api/auth/login",
            "description": "Returns token and user. Token is auto-saved to collection variable for other requests."
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": { "method": "POST", "header": [], "url": { "raw": "{{base_url}}/api/auth/login" }, "body": { "mode": "raw", "raw": "{\"email\":\"shaizqurashi12345@gmail.com\",\"password\":\"aligarh123boss\"}" } },
              "status": "OK",
              "code": 200,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"user\": {\n    \"id\": \"477ec7b8-22b0-499c-9198-463f29a06ba6\",\n    \"name\": \"Ali khusroo bin Sabir\",\n    \"email\": \"shaizqurashi12345@gmail.com\",\n    \"role\": \"STAFF\"\n  }\n}"
            }
          ]
        },
        {
          "name": "POST Register",
