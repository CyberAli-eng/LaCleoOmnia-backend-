    {
      "name": "Auth",
      "item": [
        {
          "name": "POST Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) { pm.collectionVariables.set('token', json.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@local\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": "{{base_url}}/api/auth/login",
            "description": "Returns token and user. Token is auto-saved to collection variable for other requests."
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": { "method": "POST", "header": [], "url": { "raw": "{{base_url}}/api/auth/login" }, "body": { "mode": "raw", "raw": "{\"email\":\"admin@local\",\"password\":\"Admin@123\"}" } },
              "status": "OK",
              "code": 200,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"user\": {\n    \"id\": \"user-001\",\n    \"name\": \"Admin\",\n    \"email\": \"admin@local\",\n    \"role\": \"ADMIN\"\n  }\n}"
            }
          ]
        },
        {
          "name": "POST Register",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@123\"\n}"
            },
            "url": "{{base_url}}/api/auth/register",
            "description": "Creates user and returns token, user."
          }
        },
        {
          "name": "GET Get current user (me)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/auth/me",
            "description": "Requires Authorization: Bearer {{token}}."
