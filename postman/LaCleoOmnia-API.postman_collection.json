{
  "info": {
    "name": "LaCleoOmnia API",
    "description": "Order & Inventory Management System â€“ Auth, Orders, Inventory, Integrations (Shopify, Delhivery, Selloship), Shipments, Analytics, Profit, SKU Costs, Webhooks, Workers.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      { "key": "token", "value": "{{token}}", "type": "string" }
    ]
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8000" },
    { "key": "token", "value": "" }
  ],
  "item": [
    {
      "name": "Health",
      "item": [
        {
          "name": "GET Health check",
          "request": {
            "auth": { "type": "noauth" },
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/health",
            "description": "No auth. Returns status, service, environment."
          }
        }
      ]
    },
    {
      "name": "Auth",
      "item": [
        {
          "name": "POST Login",
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "var json = pm.response.json();",
                  "if (json.token) { pm.collectionVariables.set('token', json.token); }"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"admin@local\",\n  \"password\": \"Admin@123\"\n}"
            },
            "url": "{{base_url}}/api/auth/login",
            "description": "Returns token and user. Token is auto-saved to collection variable for other requests."
          },
          "response": [
            {
              "name": "Success Response",
              "originalRequest": { "method": "POST", "header": [], "url": { "raw": "{{base_url}}/api/auth/login" }, "body": { "mode": "raw", "raw": "{\"email\":\"admin@local\",\"password\":\"Admin@123\"}" } },
              "status": "OK",
              "code": 200,
              "header": [{ "key": "Content-Type", "value": "application/json" }],
              "body": "{\n  \"token\": \"eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...\",\n  \"user\": {\n    \"id\": \"user-001\",\n    \"name\": \"Admin\",\n    \"email\": \"admin@local\",\n    \"role\": \"ADMIN\"\n  }\n}"
            }
          ]
        },
        {
          "name": "POST Register",
          "request": {
            "auth": { "type": "noauth" },
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"name\": \"Test User\",\n  \"email\": \"test@example.com\",\n  \"password\": \"Test@123\"\n}"
            },
            "url": "{{base_url}}/api/auth/register",
            "description": "Creates user and returns token, user."
          }
        },
        {
          "name": "GET Get current user (me)",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/auth/me",
            "description": "Requires Authorization: Bearer {{token}}."
          }
        },
        {
          "name": "POST Logout",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/api/auth/logout"
          }
        }
      ]
    },
    {
      "name": "Orders",
      "item": [
        {
          "name": "GET List orders",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/api/orders?status=all",
              "host": ["{{base_url}}"],
              "path": ["api", "orders"],
              "query": [
                { "key": "status", "value": "all", "description": "all | NEW | CONFIRMED | PACKED | SHIPPED | etc." },
                { "key": "channel", "value": "", "disabled": true },
                { "key": "q", "value": "", "description": "Search order id, customer, email", "disabled": true }
              ]
            },
            "response": [
              {
                "name": "Success Response",
                "status": "OK",
                "code": 200,
                "header": [{ "key": "Content-Type", "value": "application/json" }],
                "body": "{\n  \"orders\": [\n    {\n      \"id\": \"order-001\",\n      \"channelOrderId\": \"SHOP-1001\",\n      \"customerName\": \"Rahul Sharma\",\n      \"orderTotal\": 2499.00,\n      \"status\": \"CONFIRMED\",\n      \"createdAt\": \"2026-01-22T10:00:00Z\",\n      \"items\": []\n    }\n  ]\n}"
              }
            ]
          }
        },
        {
          "name": "GET Get order by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": "{{base_url}}/api/orders/{{order_id}}",
            "description": "Set order_id in collection/env or replace in URL."
          }
        },
        {
          "name": "POST Confirm order",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/api/orders/{{order_id}}/confirm"
          }
        },
        {
          "name": "POST Pack order",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/api/orders/{{order_id}}/pack"
          }
        },
        {
          "name": "POST Ship order",
          "request": {
            "method": "POST",
            "header": [{ "key": "Content-Type", "value": "application/json" }],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"courier_name\": \"delhivery\",\n  \"awb_number\": \"AWB123456789\",\n  \"tracking_url\": \"\",\n  \"label_url\": \"\",\n  \"forward_cost\": 80,\n  \"reverse_cost\": 0\n}"
            },
            "url": "{{base_url}}/api/orders/{{order_id}}/ship"
          }
        },
        {
          "name": "POST Cancel order",
          "request": {
            "method": "POST",
            "header": [],
            "url": "{{base_url}}/api/orders/{{order_id}}/cancel"
